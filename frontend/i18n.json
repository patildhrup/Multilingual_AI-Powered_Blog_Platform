{
  "$schema": "https://lingo.dev/schema/i18n.json",
  "version": "1.10",
  "locale": {
    "source": "en",
    "targets": [
      "es",
      "hi",
      "ja",
      "fr"
    ]
  },
  "buckets": {
    "json": {
      "include": [
        "src/locales/[locale].json"
      ]
    }
  },
  "provider": {
    "id": "ollama",
    "model": "gemma3",
    "baseUrl": "http://localhost:11434",
    "prompt": "Translate the provided text from {source} to {target}."
  }
}